<div class="container">
    <div class="row">
        <div class="message-wrap col-lg-8">
            <div class="msg-wrap">
                <% Message.all.each do |message|%>
                <div class="media msg "> 
                    <div class="media-body">
                        <small class="pull-right time">
                            <i class="fa fa-clock-o"></i> <%= message.created_at.strftime("%H:%M %p") %>
                        </small>
                        <h5 class="media-heading"><%= message.user.name %></h5>
                        <small class="col-lg-10"><%= message.body %></small>
                    </div>
                </div>
                <% end %>
            </div>
            <div class="send-wrap ">
                <textarea class="form-control send-message" rows="3" placeholder="Write a reply..."></textarea>
            </div>
            <div class="btn-panel">
                <a href="" class=" col-lg-3 btn" role="button"><i class="fa fa-plus"></i> Send message</a>
            </div>
        </div>
    </div>
</div>